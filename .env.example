# Baarn Raadsinformatie MCP Server - Environment Variables

# Notubiz API (publieke token, geen geheim)
NOTUBIZ_API_URL=https://api.notubiz.nl
NOTUBIZ_API_TOKEN=11ef5846eaf0242ec4e0bea441379d699a77f703d
NOTUBIZ_API_VERSION=1.17.0

# Baarn organisatie ID (wordt automatisch opgehaald)
# NOTUBIZ_ORGANIZATION_ID=

# Logging
LOG_LEVEL=INFO

# Database
DB_PATH=data/baarn.db

# Document storage
DOCUMENTS_PATH=data/documents
CACHE_PATH=data/cache

# ===== Auto Sync Settings =====
# Automatisch synchroniseren bij eerste start
AUTO_SYNC_ENABLED=true

# Hoeveel dagen terug bij eerste sync (default: 365)
AUTO_SYNC_DAYS=365

# Automatisch documenten downloaden (default: true)
AUTO_DOWNLOAD_DOCS=true

# Automatisch embeddings indexeren voor semantic search (default: false)
# Zet op true als je sentence-transformers hebt geinstalleerd
AUTO_INDEX_DOCS=false

# ===== Storage Settings =====
# false (default): Download PDF -> extract text -> delete PDF (minimal storage!)
# true: Keep original PDF files on disk after text extraction
KEEP_PDF_FILES=false

# ===== Embeddings Settings =====
# Embeddings inschakelen voor semantic search
EMBEDDINGS_ENABLED=true

# Embeddings model (voor semantisch zoeken)
# Gebruik een klein Nederlands-vriendelijk model
EMBEDDINGS_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Cache settings
CACHE_TTL_HOURS=24
